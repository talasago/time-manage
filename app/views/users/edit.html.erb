<% provide(:title, 'ユーザー情報変更') %>
<% provide(:url, user_path) %>
<% provide(:button_text, 'ユーザ情報を更新する') %>
<div class="wrapper">
  <h1>ユーザー新規変更</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render 'form' %>
      <%= link_to "ユーザーを削除しますか？", @user, method: :delete,
                                  data: { confirm: "本当にユーザーを削除しますか？削除されたデータは元に戻りません。" } %>
    </div>
  </div>
</div>
