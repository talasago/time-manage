<% provide(:title, 'ユーザー一覧') %>

<div class="wrapper">
  <div class="container">
    <h1>ユーザー一覧</h1>

    <%= will_paginate :previous_label => "&lt&lt", :next_label => '&gt&gt' %>

    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name, user %>
          <%= link_to user_show_detail_path(user), remote: true do %>
            <i class="fas fa-info-circle"></i>
          <% end %>
        </li>
      <% end %>
    </ul>

    <div id="user-modal" class="modal fade" tabindex="-1"></div>

    <%= will_paginate :previous_label => "&lt&lt", :next_label => "&gt&gt"%>
  </div>
</div>