<% provide(:title, 'ユーザー一覧') %>

<div class="wrapper">
  <div class="container">
    <h1>ユーザー一覧</h1>

    <%= will_paginate :previous_label => "&lt&lt", :next_label => '&gt&gt' %>

    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name, user %>
          <%= link_to "詳細", edit_user_path(user), remote: true %>
        </li>
      <% end %>
    </ul>

    <%= will_paginate :previous_label => "&lt&lt", :next_label => "&gt&gt"%>
  </div>
</div>